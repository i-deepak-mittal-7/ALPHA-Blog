<%- include("partials/header.ejs") -%>

<h1>Home</h1>
<p><%= homeStartingContent %> </p>

<% for(var i=posts.length-1; i>=0; i--) { %>

    <h2> <%= posts[i].title %> </h2>

    <% if(posts[i].content.length>100) { %> 
    <p><%= posts[i].content.substring(0,100) + "..." %> <a href="/posts/<%= posts._id %>" > Read More </a> </p>
    <% } else { %> 
    <p> <%= posts[i].content %> </p>
    <% } %> 

<% } %>

<%- include("partials/footer.ejs") -%>